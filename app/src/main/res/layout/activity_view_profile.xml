<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="ilo.ilo.ViewProfileActivity">

    <View
        android:id="@+id/profile_rectangle"
        android:layout_width="381dp"
        android:layout_height="571dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape_toolbar_rectangle" />

    <!-- Menu bar rectangle  -->
    <View
        android:id="@+id/shape_toolbar_rectangle"
        android:layout_width="419dp"
        android:layout_height="70dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/toolbar_profile"
        app:layout_constraintBottom_toTopOf="@+id/profile_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Dreamboard goal 1 box  -->
    <View
        android:id="@+id/activity_view_profile_dreamboard_rectangle_1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/dreamboard_text_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_rectangle_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_view_profile_dreamboard_rectangle_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <!-- Dreamboard goal 1 text -->
    <TextView
        android:id="@+id/textView_goal1"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_marginEnd="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:text="Goal 1:"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_rectangle_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_view_profile_dreamboard_rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_badge_icon" />

    <!-- Dreamboard goal 2 box  -->
    <View
        android:id="@+id/activity_view_profile_dreamboard_rectangle_2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/dreamboard_text_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />

    <!-- Dreamboard goal 2 text -->
    <TextView
        android:id="@+id/textView_goal2"
        android:layout_width="61dp"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Goal 2:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_rectangle_2"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/activity_view_profile_dreamboard_rectangle_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />


    <!-- Dreamboard goal 3 box  -->
    <View
        android:id="@+id/activity_view_profile_dreamboard_rectangle_3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/dreamboard_text_rectangle"
        app:layout_constraintBottom_toTopOf="@+id/shape_yellow_rectangle"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_view_profile_dreamboard_rectangle_2" />

    <!-- Dreamboard goal 3 text -->
    <TextView
        android:id="@+id/textView_goal3"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Goal 3:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Dreamboard accomplishment box  -->
    <View
        android:id="@+id/activity_view_profile_dreamboard_accomplishments_box"
        android:layout_width="300dp"
        android:layout_height="149dp"
        android:layout_marginBottom="92dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dreamboard_text_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_view_profile_dreamboard_rectangle_3"
        app:layout_constraintVertical_bias="0.428" />

    <!-- Dreamboard accomplishment yellow title background  -->
    <View
        android:id="@+id/shape_yellow_rectangle"
        android:layout_width="302dp"
        android:layout_height="35dp"
        android:background="@drawable/yellow_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641" />

    <!-- Profile picture circle  -->
    <View
        android:id="@+id/shape_profile_picture_circle"
        android:layout_width="83dp"
        android:layout_height="82dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/profile_picture_circle"
        app:layout_constraintBottom_toTopOf="@+id/activity_view_profile_dreamboard_rectangle_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_menu_bar"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="menu bar (white)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_icon_white" />

    <TextView
        android:id="@+id/textView_accomplishments"
        android:layout_width="122dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Accomplishments"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shape_yellow_rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shape_yellow_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <TextView
        android:id="@+id/text_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:text="Full Name"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_view_profile_dreamboard_rectangle_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape_profile_picture_circle"
        app:layout_constraintVertical_bias="0.857" />

    <!--
     <TextView
        android:id="@+id/text_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="LastName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_view_profile_dreamboard_rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/profile_rectangle"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/shape_profile_picture_circle"
        app:layout_constraintVertical_bias="0.393" />
        -->

    <ImageView
        android:id="@+id/imageView_badge_icon"
        android:layout_width="72dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171"
        app:srcCompat="@drawable/badge2" />


    <!-- Progress bar (at 25%)  -->
    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="576dp"
        android:progress="25"
        android:progressBackgroundTint="#FFFFFFFF"
        android:progressTint="#f0d377"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Level Number Textview  -->
    <TextView
        android:id="@+id/textView_level_number"
        android:layout_width="66dp"
        android:layout_height="27dp"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Level 4"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_view_profile_dreamboard_accomplishments_box"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/determinateBar"
        app:layout_constraintTop_toBottomOf="@+id/shape_yellow_rectangle"
        app:layout_constraintVertical_bias="0.948" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <!-- Edit icon -->
    <Button
        android:id="@+id/button_view_edit_icon"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/profile_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/profile_rectangle"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/shape_toolbar_rectangle"
        app:layout_constraintVertical_bias="0.038" />



</android.support.constraint.ConstraintLayout>
